<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/styles.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    <title>Vinyland</title>
</head>
<body>
    <div class="ban">
        <header class="header">
            <a href="/">
                <div class="logo">
                    <img src="/images/vinyland.png" alt="Vinyl Land Logo" height="150px" width="150px">
                </div>
            </a>
            <div class="search-bar">
                <form action='/vinyls/search' method="GET" class="search-bar">
                    <input type="text" name="q" placeholder="Search...">
                    <button type="submit" class="search-button">
                        <img src="/images/search.png" alt="search button" height="20" width="20">
                    </button>
                </form> 
            </div> 
            <nav class="navbar">
                <% if (!user) { %>
                    <a href="/vinyls">Browse</a>
                    <a href="/users/login">Login</a>
                    <a href="/users/new">Sign Up</a>
                  <% } else { %>
                    <a href="/users/profile">Profile</a>
                    <a href="/vinyls">Browse</a>
                    <a href="/vinyls/new">Sell</a>
                    <a href="/users/logout">Logout</a>
                  <% } %>
            </nav>
        </header>
        <% if(errorMessages.length > 0) {%>
            <% errorMessages.forEach(message=>{%>
                <div class='error' id="error">
                    <%=message%>
                </div>
                <%});%>
                    <%}%>
        
                        <% if(successMessages.length > 0) {%>
        
                            <% successMessages.forEach(message=>{%>
                                <div class='success' id="success">
                                    <%=message%>
                                </div>
                                <%});%>
                                    <%}%>

                                    <script>
                                        setTimeout(function() {
                                  var errorMessage = document.getElementById("error");
                                  var successMessage = document.getElementById("success");
                              
                                  if (errorMessage) {
                                    errorMessage.style.display = "none";
                                  }
                              
                                  if (successMessage) {
                                    successMessage.style.display = "none";
                                  }
                                }, 3000);
                                  </script>
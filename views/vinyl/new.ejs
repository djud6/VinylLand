<%- include('../partials/header2.ejs')%>

<link rel="stylesheet" href="/css/form.css">

<div class="wrapper">
    <div class="container">
        <div class="form-desc">
            <h1>Sell at Vinyland</h1>
            <p>Start selling your items today!</p>
        </div>
    
        <div class="form-group">
            <form action='/vinyls' enctype="multipart/form-data" method='POST' class="new-form">
                <div class="form-row">
                    <label for="condition">Condition:</label>
                    <select name="condition" id="condition" required>
                        <option value="" disabled selected>Select condition</option>
                        <option value="New">New</option>
                        <option value="Excellent">Excellent</option>
                        <option value="Very Good">Very Good</option>
                        <option value="Good">Good</option>
                        <option value="Fair">Fair</option>
                    </select>
                </div>
    
                <div class="form-row">
                    <label for="title">Title:</label>
                    <input type="text" name="title" id="title" required>
                </div>

                <div class="form-row">
                    <label for="artist">Artist:</label>
                    <input type="text" name="artist" id="artist" required>
                </div>
                
                <div class="form-row">
                    <label for="price">Price:</label>
                    <input type="number" id="price" step="0.01" name="price" required>
                </div>
    
                <div class="form-row">
                    <label for="details">Details:</label>
                    <textarea rows="5" id="details" name="details" class="fixed-width" minlength="10" required></textarea>
                </div>
    
                <div class="form-row">
                    <label for="image">Image:</label>
                    <input type="file" name="image" id="image">
                </div>
    
                <div class="form-row">
                    <button type="submit" class="submit-button">Submit</button>
                </div>
            </form>
        </div>
    </div>
</div>
<footer class="footer">
    <div class="footer-content">
        <p>@vinylLand</p>
        <div class="social-media">
            <a href="#"><i class="fa-brands fa-facebook" style="color: #fff;"></i></a>
            <a href="#"><i class="fa-brands fa-linkedin" style="color: #fff;"></i></a>
            <a href="#"><i class="fa-brands fa-instagram" style="color: #fff;"></i></a>
        </div>
    </div>
</footer>
</body>
</html>



